<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/show_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:paddingBottom="0dp"

    tools:context="com.example.myfirstapp.Show">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/showCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="250dp"
            android:text="Country"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtCountry"
            app:layout_constraintStart_toEndOf="@+id/txtCountry" />

        <TextView
            android:id="@+id/txtCountry"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Country: "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtStatus" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:text="Title: "
            app:layout_constraintBaseline_toBaselineOf="@+id/showTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/showTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:maxWidth="250dp"
            android:text="Title"
            app:layout_constraintStart_toEndOf="@+id/txtTitle"
            app:layout_constraintTop_toBottomOf="@+id/showLogo" />

        <TextView
            android:id="@+id/showDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:maxWidth="250dp"
            android:text="Description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtDescription"
            app:layout_constraintTop_toBottomOf="@+id/showTitle" />


        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="Description: "
            app:layout_constraintBaseline_toBaselineOf="@+id/showDescription"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/showTotalSeasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="250dp"
            android:text="Season Amount"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtTotalSeasons"
            app:layout_constraintStart_toEndOf="@+id/txtTotalSeasons" />

        <TextView
            android:id="@+id/txtTotalSeasons"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Total Seasons: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showDescription" />

        <TextView
            android:id="@+id/showStarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="250dp"
            android:text="Started"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtStarted"
            app:layout_constraintStart_toEndOf="@+id/txtStarted" />

        <TextView
            android:id="@+id/txtStarted"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Started: "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCountry" />

        <TextView
            android:id="@+id/showStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="250dp"
            android:text="Status"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtStatus"
            app:layout_constraintStart_toEndOf="@+id/txtStatus" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Status: "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTotalSeasons" />

        <TextView
            android:id="@+id/showEnded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="250dp"
            android:text="Ended"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtEnded"
            app:layout_constraintStart_toEndOf="@+id/txtEnded" />

        <TextView
            android:id="@+id/txtEnded"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ended: "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtStarted" />

        <ImageView
            android:id="@+id/showLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:onClick="setEvent"
            android:text="Add Event"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtEnded" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>
